{
  "name": "Facebook Mood",
  "version": "1.0.3",
  "description": "Analyzes how you react to facebook on average",
  "homepage_url": "http://fbmood.herokuapp.com/",
  "manifest_version": 2,
  "permissions": ["tabs"],

  "icons": {
    "16":  "images/icon-16.png",
    "48":  "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "background": {
    "persistent": true,
    "scripts": [
      "lib/background.js"
    ]
  },

  "browser_action": {
    "default_icon": "images/bug-16.gif",
    "default_title": "Test FBMood",
    "default_popup": "test/popup.html"
  }
}
