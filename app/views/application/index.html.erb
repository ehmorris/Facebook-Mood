<h1>Does facebook make you jealous?</h1>
<h2>We help you keep track of how facebook makes you feel.</h2>

<h2>Sign in</h2>

<%= form_for :session, :url => session_path do |form| %>
  <div class='text_field'>
    <%= form.label :email %>
    <%= form.text_field :email, :type => 'email' %>
  </div>

  <div class='text_field'>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class='submit_field'>
    <%= form.submit 'Sign in' %>
  </div>
<% end %>

<h2>Sign up</h2>

<%= form_for @user do |form| %>
  <div class='text_field'>
    <%= form.label :email %>
    <%= form.text_field :email, :type => 'email' %>
  </div>

  <div class='password_field'>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <%= form.submit 'Sign up' %>
<% end %>

