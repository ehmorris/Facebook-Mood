<hgroup>
  <h1>Does facebook make you jealous?</h1>
  <h2>We help you keep track of how facebook makes you feel</h2>
</hgroup>

<section class="signup">
  <h2>Sign up!</h2>
  <%= form_for @user do |form| %>
    <%= form.text_field :email, :type => 'email', placeholder: 'email' %>
    <%= form.password_field :password, placeholder: 'password' %>
    <%= form.submit "Let's Goooooo!" %>
  <% end %>
</section>

<section class="signin">
  <h2>if you have an account already...</h2>
  <%= form_for :session, :url => session_path do |form| %>
    <%= form.text_field :email, :type => 'email', placeholder: 'email' %>
    <%= form.password_field :password, placeholder: 'password' %>
    <%= form.submit 'Sign in' %>
  <% end %>
</section>


