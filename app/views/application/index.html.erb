<section class="promotion">
  <%= image_tag('promotion.png') %>
</section>

<aside>
  <header class="home">
    <hgroup>
      <h1>Facebook Mood</h1>
      <h2>Track how Facebook makes you feel</h2>
    </hgroup>
  </header>

  <section class="signup">
    <h2>Sign up!</h2>
    <%= form_for User.new do |form| %>
      <%= form.text_field :email, :type => 'email', placeholder: 'email' %>
      <%= form.password_field :password, placeholder: 'password' %>
      <%= form.submit "Let's Goooooo!" %>
    <% end %>
  </section>
</aside>
